<Page
    x:Class="Mikrokontroler8051_2._0.RejestrSpecjalnyPSW"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mikrokontroler8051_2._0"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Pivot Title="PSW(Program Status Word) - słowo statusowe">

            <PivotItem Header="bit 0">
                <StackPanel>
                    <TextBlock Text=" - Flaga 'P' (Parity):"
                               TextWrapping="WrapWholeWords"
                               FontWeight="Bold"
                               FontStyle="Italic"
                               FontSize="26"
                               Margin="5"
                               ></TextBlock>

                    <TextBlock Text=" - znacznik parzystości - ustawiony na 1 informuje o nieparzystej liczbie jedynek w akumulatorze, jest ustawiany po wykonaniu każdego rozkazu w zależności od zawartości akumulatora."
                               TextWrapping="WrapWholeWords"
                               FontSize="22"
                               Margin="5"
                               ></TextBlock>
                </StackPanel>
            </PivotItem>

            <PivotItem Header="bit 1">
                <StackPanel>
                    <TextBlock Text=" - Brak flagi."
                               TextWrapping="WrapWholeWords"
                               FontWeight="Bold"
                               FontStyle="Italic"
                               FontSize="26"
                               Margin="5"
                               ></TextBlock>
                </StackPanel>
            </PivotItem>

            <PivotItem Header="bit 2">
                <StackPanel>
                    <TextBlock Text=" - Flaga 'OV' (OVerflow):"
                               TextWrapping="WrapWholeWords"
                               FontWeight="Bold"
                               FontStyle="Italic"
                               FontSize="26"
                               Margin="5"
                               ></TextBlock>

                    <TextBlock Text=" - znacznik nadmiaru dla dodawania i odejmowania w kodzie U2; dla mnożenia 1 wskazuje niezerową wartość rejestru B, dla dzielenia 1 oznacza wystąpienie dzielenia przez 0."
                               TextWrapping="WrapWholeWords"
                               FontSize="22"
                               Margin="5"
                               ></TextBlock>

                    <TextBlock Text=" - dla mnożenia 1 wskazuje niezerową wartość rejestru B, dla dzielenia 1 oznacza wystąpienie dzielenia przez 0."
                               TextWrapping="WrapWholeWords"
                               FontSize="22"
                               Margin="5"
                               ></TextBlock>

                    <TextBlock Text=" - dla dzielenia 1 oznacza wystąpienie dzielenia przez 0."
                               TextWrapping="WrapWholeWords"
                               FontSize="22"
                               Margin="5"
                               ></TextBlock>
                </StackPanel>
            </PivotItem>

            <PivotItem Header="bit 3">
                <StackPanel>
                    <TextBlock Text=" - Flaga RS0:"
                               TextWrapping="WrapWholeWords"
                               FontWeight="Bold"
                               FontStyle="Italic"
                               FontSize="26"
                               Margin="5"
                               ></TextBlock>

                    <TextBlock Text=" - bit wyboru bloku rejestrów roboczych."
                               TextWrapping="WrapWholeWords"
                               FontSize="22"
                               Margin="5"
                               ></TextBlock>
                </StackPanel>
            </PivotItem>

            <PivotItem Header="bit 4">
                <StackPanel>
                    <TextBlock Text=" - Flaga RS1:"
                               TextWrapping="WrapWholeWords"
                               FontWeight="Bold"
                               FontStyle="Italic"
                               FontSize="26"
                               Margin="5"
                               ></TextBlock>

                    <TextBlock Text=" - bit wyboru bloku rejestrów roboczych."
                               TextWrapping="WrapWholeWords"
                               FontSize="22"
                               Margin="5"
                               ></TextBlock>
                </StackPanel>
            </PivotItem>

            <PivotItem Header="bit 5">
                <StackPanel>
                    <TextBlock Text=" - Flaga 'F0':"
                               TextWrapping="WrapWholeWords"
                               FontWeight="Bold"
                               FontStyle="Italic"
                               FontSize="26"
                               Margin="5"
                               ></TextBlock>

                    <TextBlock Text=" - znacznik uniwersalny do dowolnego wykorzystania."
                               TextWrapping="WrapWholeWords"
                               FontSize="22"
                               Margin="5"
                               ></TextBlock>
                </StackPanel>
            </PivotItem>

            <PivotItem Header="bit 6">
                <StackPanel>
                    <TextBlock Text=" - Flaga 'AC' (Auxiliary Carry):"
                               TextWrapping="WrapWholeWords"
                               FontWeight="Bold"
                               FontStyle="Italic"
                               FontSize="26"
                               Margin="5"
                               ></TextBlock>

                    <TextBlock Text=" - ustawiany w przypadku wystąpnienia przeniesienia z ACC.3 na ACC.4."
                               TextWrapping="WrapWholeWords"
                               FontSize="22"
                               Margin="5"
                               ></TextBlock>
                </StackPanel>
            </PivotItem>

            <PivotItem Header="bit 7">
                <StackPanel>
                    <TextBlock Text=" - Flaga 'C' (Carry):"
                               TextWrapping="WrapWholeWords"
                               FontWeight="Bold"
                               FontStyle="Italic"
                               FontSize="26"
                               Margin="5"
                               ></TextBlock>

                    <TextBlock Text=" - znacznik przeniesienia - ustawiany w przypadku wystąpnienia przeniesienia z pozycji siódmego bity akumulatora."
                               TextWrapping="WrapWholeWords"
                               FontSize="22"
                               Margin="5"
                               ></TextBlock>
                </StackPanel>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>

